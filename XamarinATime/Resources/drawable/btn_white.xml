<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <gradient
        android:startColor="#FFFFFF"
        android:endColor="#D3D3D3"
        android:angle="270" />
      <stroke
        android:width="2dp"
        android:color="#A9A9A9" />
      <corners
        android:radius="3dp" />
      <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid
        android:startColor="#FFFFFF" />
      <stroke
        android:width="2dp"
        android:color="#A9A9A9" />
      <corners
        android:radius="4dp" />
      <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    </shape>
  </item>
</selector>
